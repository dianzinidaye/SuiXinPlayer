<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    android:orientation="horizontal"
    android:id="@+id/notification">

    <ImageView
        android:id="@+id/author_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/houxian" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_song_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="3"
                android:textColor="#ffffff"
                app:autoSizeTextType="uniform"
                android:text="喜欢你" />

            <TextView
                android:id="@+id/notification_author"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="2"
                android:textColor="#ffffff"
                app:autoSizeTextType="uniform"
                android:text="邓紫棋" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notification_pre"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_last" />
            <ImageView
                android:id="@+id/notification_play_pause"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_play" />
            <ImageView
                android:id="@+id/notification_next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_next" />
            <ImageView
                android:id="@+id/notification_fav"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/favorites" />


        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_cancel_10dp"/>

</LinearLayout>